# 應用配置
NUXT_PUBLIC_APP_TITLE=玩運彩預測平台
NUXT_PUBLIC_APP_ENV=development
NUXT_PUBLIC_APP_VERSION=1.0.0

# API 配置
NUXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NUXT_PUBLIC_API_TIMEOUT=10000

# GCP 配置
NUXT_PUBLIC_GCP_PROJECT_ID=your-project-id
NUXT_PUBLIC_GCP_REGION=asia-east1
NUXT_PUBLIC_GCP_STORAGE_BUCKET=your-storage-bucket

# 第三方登入配置
NUXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NUXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NUXT_PUBLIC_LINE_CLIENT_ID=your-line-client-id

# 金流配置
NUXT_PUBLIC_PAYMENT_GATEWAY_URL=https://api.payment-gateway.com
NUXT_PUBLIC_PAYMENT_MERCHANT_ID=your-merchant-id

# 分析工具配置
NUXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
NUXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# 功能開關
NUXT_PUBLIC_ENABLE_MOCK_API=false
NUXT_PUBLIC_ENABLE_DEBUG_MODE=false
NUXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# CDN 配置
NUXT_PUBLIC_CDN_BASE_URL=https://cdn.your-domain.com
NUXT_PUBLIC_STATIC_RESOURCE_URL=https://static.your-domain.com

# WebSocket 配置
NUXT_PUBLIC_WS_BASE_URL=ws://localhost:3000
NUXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# 上傳配置
NUXT_PUBLIC_UPLOAD_MAX_SIZE=5242880
NUXT_PUBLIC_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# 服務器端配置（私有）
NUXT_API_SECRET=your-api-secret-key
