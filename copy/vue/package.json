{
	"name": "legacy-to-vue",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite --host 0.0.0.0 --port 5175",
		"build": "vite build",
		"preview": "vite preview --host 0.0.0.0 --port 8080",
		"pm2:dev": "npx pm2 start ecosystem.config.cjs --only app:dev",
		"pm2:preview": "npx pm2 start ecosystem.config.cjs --only app:preview",
		"pm2:stop": "npx pm2 stop app:dev app:preview || true",
		"pm2:restart": "npx pm2 restart app:dev app:preview || true",
		"lint": "eslint . --ext .ts,.vue",
		"lint:fix": "eslint . --ext .ts,.vue --fix",
		"format": "prettier -w .",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"prepare": "husky"
	},
	"dependencies": {
		"axios": "^1.12.2",
		"pinia": "^2.3.1",
		"vue": "^3.3.4",
		"vue-router": "^4.4.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.35.0",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"@vue/test-utils": "^2.4.6",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-vue": "^10.4.0",
		"happy-dom": "^17.6.1",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.5.2",
		"postcss": "^8.4.47",
		"prettier": "^3.6.2",
		"tailwindcss": "^3.4.10",
		"typescript": "^5.0.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^4.4.5",
		"vitest": "^3.2.4",
		"vue-eslint-parser": "^10.2.0"
	},
	"lint-staged": {
		"src/**/*": {
			"{ts,vue,js,json,css,md}": "prettier -w"
		}
	}
}
